    class_type = UppercaseReference
    operator :
    name = TypeReference
} | ValueParameterDecl {
    captures {
        ty = Type
        name = ValueReference
    }
    ty = Type
    operator :
    name = ValueReference
} | TypeParameterDecl {
    captures {
        name = TypeReference
    }
    name = TypeReference
