}

rule SymbolsFromModule {
    captures {
        symbols = SymbolList
        module = GlobalModuleReference
        selection_option = optional: SelectionOption
    }
    symbols = SymbolList
    keyword FROM
    persist
    module = GlobalModuleReference
    optional {
        selection_option = SelectionOption
